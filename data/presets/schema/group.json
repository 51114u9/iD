                    {
                        "type": "string"
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 1
                    },
                    {
                        "type": "object",
                        "additionalProperties": {
                            "type": "boolean"
                        }
                    }
                ]
            }
        },
        "rule": {
            "anyOf": [
                {
                    "type": "object",
                    "properties": {
                        "any": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/rule"
                            },
                            "minItems": 1
                        }
                    },
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "all": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/rule"
                            },
                            "minItems": 1
                        }
                    },
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "none": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/rule"
                            },
